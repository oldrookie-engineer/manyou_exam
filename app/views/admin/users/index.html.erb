<%= notice %>
<h1>ユーザー一覧(管理者用)</h1><br>
<table>
  <tr>
    <th>ユーザーID</th>
    <th>ユーザー名</th>
    <th>タスク数</th>
    <th>管理者権限</th>
    <th colspan="3">管理者処理メニュー</th>
  </tr>
<% @users.each do |user| %>
<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.tasks.count %>件</td>
  <td><%= user.admin? ? "◯": "ー"  %></td>
  <td><%= link_to '詳細', admin_user_path(user.id) %></td>
  <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
  <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
</tr>
<% end %>
</table><br>
<%= link_to 'ユーザー登録', new_admin_user_path %>

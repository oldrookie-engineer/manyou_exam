<h1>タスク一覧</h1>
<%= form_with(model: @task, local: true, url: tasks_path, method: :get) do |form|  %>
    <%= form.label :title, :タイトル検索 %>
    <%= form.text_field :title %>
    <%= form.label :status, :状態検索 %>
    <%= form.select :status, [[""],["未着手"],["着手中"],["完了"]] %>
    <%= form.label :priority, :優先順位 %>
    <%= form.select :priority, Task.priorities.keys.to_a, include_blank: true %>
    <%= form.hidden_field :search, value: 'true' %>
    <%= form.submit '検索' %>
<% end %>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>状態</th>
    <th>優先順位</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td id="task_row"><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
  </tr>
<% end %>
</table>
<%= link_to '新規作成', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_deadline: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>
